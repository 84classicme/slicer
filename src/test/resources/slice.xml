<Slice>
    <Name>SlicerTestOne</Name>
    <Controllers>
        <Controller name="AccountController">
            <Services>
                <Service name="AccountService">
                    <Services>
                        <Service name="Validator"/>
                        <Service name="EventTracker"/>
                    </Services>
                    <Repositories>
                        <Repository name="AccountRepository"/>
                    </Repositories>
                </Service>
                <Service name="OnboardingService">
                    <Services>
                        <Service name="Validator"/>
                        <Service name="Emailer"/>
                    </Services>
                    <Repositories>
                        <Repository name="OnboardingRepository"/>
                    </Repositories>
                </Service>
            </Services>
            <Endpoints>
                <Endpoint name="createAccount" method="POST" uri="/accounts">
                    <RequestBody name="slice" type="org.slicer.Slice"/>
                    <ResponseCode>202</ResponseCode>
                    <ResponseType>org.slicer.Slice</ResponseType>
                </Endpoint>
                <Endpoint name="getAccount" method="GET" uri="/accounts/{region}/{department}">
                    <RequestParams>
                        <RequestParam name="name" type="String"/>
                        <RequestParam name="ssn" type="String"/>
                    </RequestParams>
                    <PathVariables>
                        <PathVariable name="department" type="String"/>
                        <PathVariable name="region" type="String"/>
                    </PathVariables>
                    <ResponseCode>200</ResponseCode>
                    <ResponseType>org.slicer.Slice</ResponseType>
                </Endpoint>
                <Endpoint name="getAccounts" method="GET" uri="/accounts/search">
                    <RequestParams>
                        <RequestParam name="lastname" type="String"/>
                        <RequestParam name="state" type="String"/>
                    </RequestParams>
                    <ResponseCode>200</ResponseCode>
                    <ResponseType>org.slicer.Slice</ResponseType>
                </Endpoint>
                <Endpoint name="editAccount" method="PUT" uri="/accounts/{region}/{department}">
                    <PathVariables>
                        <PathVariable name="department" type="String"/>
                        <PathVariable name="region" type="String"/>
                    </PathVariables>
                    <RequestBody name="slice" type="org.slicer.Slice"/>
                    <ResponseCode>200</ResponseCode>
                    <ResponseType>org.slicer.Slice</ResponseType>
                </Endpoint>
            </Endpoints>
        </Controller>
    </Controllers>
</Slice>

